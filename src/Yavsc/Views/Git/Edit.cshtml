@model Yavsc.Server.Models.IT.SourceCode.GitRepositoryReference

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>GitRepositoryReference</h4>
        <hr />
